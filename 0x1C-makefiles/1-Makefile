CC := gcc

# Source files
SRC := school.c main.c # Add all your .c files here

# Name of the executable
EXECUTABLE := school

# The 'all' rule
all: $(EXECUTABLE)

# Rule for building the executable
$(EXECUTABLE): $(SRC)
	$(CC) -o $@ $^

# Clean rule to remove the executable
clean:
	rm -f $(EXECUTABLE)
